@page
@model Leap_Year.Pages.HistoriaModel

@{
    ViewData["Title"] = "Historia";
}

<h1>Historia</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.LeapYear.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeapYear.Year)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.LeapYear.SearchTime)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeapYear.Result)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Records.LeapYear)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modeItem => item.FullResult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SearchTime)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

